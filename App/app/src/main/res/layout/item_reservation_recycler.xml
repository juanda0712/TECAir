<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="@color/colorTema2"
    card_view:cardElevation="6dp"
    card_view:contentPadding="16dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/itemImage"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Origin-Dest"
            android:id="@+id/OriDest"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_toEndOf="@id/itemImage"
            android:layout_toRightOf="@id/itemImage"
            android:layout_alignParentTop="true"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vuelo"
            android:id="@+id/itemFlightNumber"
            android:textColor="@color/white"
            android:layout_toEndOf="@id/itemImage"
            android:layout_toRightOf="@id/itemImage"
            android:layout_below="@id/OriDest"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemDate"
            android:textColor="@color/white"
            android:text="Fecha"

            android:layout_toEndOf="@id/itemImage"
            android:layout_toRightOf="@id/itemImage"
            android:layout_below="@id/itemFlightNumber"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemPrice"
            android:textColor="@color/white"
            android:text="Price"
            android:layout_toEndOf="@id/itemImage"
            android:layout_toRightOf="@id/itemImage"
            android:layout_below="@id/itemDate"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
